const router = require('express').Router();

const { Post } = require('../models');
const apiRoutes = require('./api');
const homeRoutes = require('./home-routes.js');

router.use('/', homeRoutes);
router.use('/api', apiRoutes);

router.use((req, res) => {
  res.status(404).end();
});

Post.belongsTo(User, {
  foreignKey: 'user_id',
});

module.exports = router;